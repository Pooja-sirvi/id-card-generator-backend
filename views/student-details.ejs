<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student ID Card</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      defer
    ></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/qrcode@1.4.4/build/qrcode.min.js"></script>
    <style>
      /* Convert mm to pixels (57mm x 89mm) */
      .id-card {
        width: 215.2px; /* 57mm in pixels */
        height: 336px; /* 89mm in pixels */
        padding: 10px;
        display: flex;
        flex-direction: row;
        justify-content: space-between;
        margin-bottom: 10px;
        background-size: cover;
        background-position: center;
      }

      /* Front page background image */
      #front-side {
        background-image: url("https://res.cloudinary.com/vanshstorage/image/upload/v1733251106/front_qu88ri.jpg"); /* Your predefined front background image */
      }

      /* Back page background image */
      #back-side {
        background-image: url("https://res.cloudinary.com/vanshstorage/image/upload/v1733251106/back_gid61r.jpg"); /* Your predefined back background image */
      }

      .id-card .left {
        width: 50%;
        padding-right: 10px;
      }

      .id-card .right {
        width: 50%;
        text-align: center;
      }

      .id-card img {
        width: 80px;
        height: 80px;
      }

      .id-card .details {
        font-size: 12px;
        margin-top: 10px;
      }

      .id-card .qr-code {
        margin-top: 10px;
      }

      /* Container to hold both front and back ID card */
      .id-card-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
      }
    </style>
  </head>
  <body class="bg-light">
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
      <div class="container">
        <a class="navbar-brand" href="/">Student ID System</a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarNav"
          aria-controls="navbarNav"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/data">All Records</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/search">Search</a>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/logout">Logout</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container py-5">
      <h1 class="text-center mb-4">Student ID Card</h1>

      <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
          <div class="card shadow">
            <div class="card-body">
              <div class="id-card-container">
                <!-- Front Side: Name, Department, and Profile Picture -->
                <div class="id-card" id="front-side">
                  <div class="left">
                    <div class="details">
                      <p
                        style="
                          margin-top: 80px;
                          font-size: 13px;
                          white-space: nowrap;
                        "
                      >
                        <strong
                          ><%= student.firstName %> <%= student.secondName
                          %></strong
                        >
                      </p>
                    </div>
                    <img
                      style="margin-top: 93px"
                      src="https://res.cloudinary.com/vanshstorage/image/upload/v1733350441/IMG_20240829_200745_t4izpx.jpg"
                      alt="Profile Picture"
                    />
                    <p
                      style="
                        color: white;
                        padding-top: 10px;
                        padding-left: 50px;
                        white-space: nowrap;
                      "
                    >
                      <strong>Student -<%= student.branch %></strong>
                    </p>
                  </div>
                </div>

                <!-- Back Side: Address, Roll No, Blood Group, QR Code -->
                <div class="id-card" id="back-side">
                  <div class="">
                    <p
                      style="
                        color: white;
                        padding-left: 110px;
                        font-size: 14px;
                        padding-top: 2px;
                        font-weight: 600;
                      "
                    >
                      <%= student.bloodGroup %>ve
                    </p>
                    <div
                      style="
                        max-width: 300px;
                        word-wrap: break-word;
                        font-size: 15px;
                      "
                    >
                      <p style="white-space: normal; margin: 0">
                        D/o <%= student.fathersName %>
                      </p>
                      <p
                        style="
                          word-wrap: break-word;
                          overflow-wrap: break-word;
                          font-size: 13px;
                          padding-left: 50px;
                        "
                      >
                        <%= student.residentialAddress %>
                      </p>
                      <p
                        style="
                          white-space: nowrap;
                          margin: 0;
                          font-size: 13px;
                          margin-top: 32px;
                          padding-left: 50px;
                        "
                      >
                        <%= student.phoneNumber %>
                      </p>
                    </div>
                    <div class="right" style="padding-left: 115px; margin: 0">
                      <div class="qr-code">
                        <canvas id="canvas"></canvas>
                      </div>
                    </div>
                    <p style="padding-left: 115px; font-size: 12px">
                      <%= student.usn %>
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <!-- Button to Download PDF -->
          <div class="text-center mt-4">
            <button class="btn btn-primary" onclick="downloadPDF()">
              <i class="bi bi-download me-2"></i>Download PDF
            </button>
          </div>
        </div>
      </div>
    </div>

   <script>
    // Sanitize function to escape special characters
    function sanitizeString(str) {
        if (str) {
            return str.replace(/[\0\x08\x09\x1a\n\r\x0b\x0c]/g, function (char) {
                return '&#' + char.charCodeAt(0) + ';';
            });
        }
        return '';
    }

    // Generate QR code
    function generateQRCode() {
        const qrCodeCanvas = document.getElementById('canvas');
        const qrData = "Student ID: <%= student.usn %>"; // Include the student unique ID or any other identifier
        QRCode.toCanvas(qrCodeCanvas, qrData, function (error) {
            if (error) console.error(error);
        });
    }

    // Download the ID card as PDF
    function downloadPDF() {
        // Wait for the QR code to be generated
        generateQRCode();
        
        // Wait for the canvas to load and generate PDF
        setTimeout(function () {
            html2canvas(document.querySelector('.id-card-container')).then(function (canvas) {
                const pdf = new jsPDF();
                pdf.addImage(canvas.toDataURL('image/png'), 'PNG', 10, 10, 180, 280);
                pdf.save('Student-ID-Card.pdf');
            });
        }, 500); // Delay to ensure QR code is generated
    }
</script>

  </body>
</html>
