<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uploaded Data</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/data.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <a href="/" class="mb-3 me-4">Back</a>
    <div class="d-flex flex-row align-items-center justify-content-center">
      <h1 class="mb-3 ms-4">Student Record</h1>
    </div>

    <!-- Search Bar -->
    <div class="container mt-3 d-flex justify-content-center">
      <div class="input-group w-50">
        <input
          type="text"
          id="searchInput"
          class="form-control"
          placeholder="Search..."
          value="<%= search %>"
        />
        <button class="btn btn-primary" type="button" id="searchButton">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>

    <!-- Table Container -->
    <div class="table-container mt-4">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Sl. No.</th>
            <th>First Name</th>
            <th>Second Name</th>
            <th>USN</th>
            <th>Branch</th>
            <th>Blood Group</th>
            <th>Father's Name</th>
            <th>Residential Address</th>
            <th>(Unformatted) Phone Number</th>
            <th>Phone Number</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(item) { %>
          <tr>
            <td><%= item.slNo %></td>
            <td><%= item.firstName %></td>
            <td><%= item.secondName %></td>
            <td><%= item.usn %></td>
            <td><%= item.branch %></td>
            <td><%= item.bloodGroup %></td>
            <td><%= item.fathersName %></td>
            <td><%= item.residentialAddress %></td>
            <td><%= item.unformattedPhoneNumber %></td>
            <td><%= item.phoneNumber %></td>
            <td>
              <button
                class="btn btn-danger btn-sm delete-btn"
                data-id="<%= item._id %>"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <!-- Drop Database Button -->
    <div class="container mt-3 text-center">
      <button id="dropDatabaseBtn" class="btn btn-danger w-auto">
        Drop Database
      </button>
      <div id="responseMessage" class="mt-2"></div>
    </div>

    <!-- Pagination Controls -->
    <div class="pagination">
      <% if (page > 1) { %>
      <a
        href="/data?page=<%= page - 1 %>&search=<%= search %>"
        class="page-item"
      >
        <span class="page-link">Previous</span>
      </a>
      <% } else { %>
      <span class="page-item disabled">
        <span class="page-link">Previous</span>
      </span>
      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
      <a
        href="/data?page=<%= i %>&search=<%= search %>"
        class="page-item <%= i === page ? 'active' : '' %>"
      >
        <span class="page-link"><%= i %></span>
      </a>
      <% } %> <% if (page < totalPages) { %>
      <a
        href="/data?page=<%= page + 1 %>&search=<%= search %>"
        class="page-item"
      >
        <span class="page-link">Next</span>
      </a>
      <% } else { %>
      <span class="page-item disabled">
        <span class="page-link">Next</span>
      </span>
      <% } %>
    </div>

    <script src="/js/data.js"></script>
  </body>
</html>
