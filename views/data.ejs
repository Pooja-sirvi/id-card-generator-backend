<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uploaded Data</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/data.css" rel="stylesheet" />
  </head>
  <body>
    <a href="/">Back</a>
    <h1>Uploaded Data</h1>

    <!-- Table Container to handle scrolling on smaller screens -->
    <div class="table-container">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Sl. No.</th>
            <th>First Name</th>
            <th>Second Name</th>
            <th>USN</th>
            <th>Branch</th>
            <th>Blood Group</th>
            <th>Father's Name</th>
            <th>Residential Address</th>
            <th>(Unformatted) Phone Number</th>
            <th>Phone Number</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(function(item) { %>
          <tr>
            <td><%= item.slNo %></td>
            <td><%= item.firstName %></td>
            <td><%= item.secondName %></td>
            <td><%= item.usn %></td>
            <td><%= item.branch %></td>
            <td><%= item.bloodGroup %></td>
            <td><%= item.fathersName %></td>
            <td><%= item.residentialAddress %></td>
            <td><%= item.unformattedPhoneNumber %></td>
            <td><%= item.phoneNumber %></td>
            <td>
              <button
                class="btn btn-danger btn-sm delete-btn"
                data-id="<%= item._id %>"
              >
                Delete
              </button>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>

    <!-- Pagination Controls -->
    <div class="pagination">
      <% if (page > 1) { %>
      <a href="/data?page=<%= page - 1 %>" class="page-item">
        <span class="page-link">Previous</span>
      </a>
      <% } else { %>
      <span class="page-item disabled">
        <span class="page-link">Previous</span>
      </span>
      <% } %> <% for (let i = 1; i <= totalPages; i++) { %>
      <a
        href="/data?page=<%= i %>"
        class="page-item <%= i === page ? 'active' : '' %>"
      >
        <span class="page-link"><%= i %></span>
      </a>
      <% } %> <% if (page < totalPages) { %>
      <a href="/data?page=<%= page + 1 %>" class="page-item">
        <span class="page-link">Next</span>
      </a>
      <% } else { %>
      <span class="page-item disabled">
        <span class="page-link">Next</span>
      </span>
      <% } %>
    </div>

    <!-- Drop Database Button -->
    <div class="container mt-4">
      <button id="dropDatabaseBtn" class="btn btn-danger btn-block">
        Drop Database
      </button>
      <div id="responseMessage" class="mt-2"></div>
    </div>

    <script src="/js/data.js"></script>
  </body>
</html>
