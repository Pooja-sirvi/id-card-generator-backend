<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Uploaded Data</title>
    <link href="/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/css/data.css" rel="stylesheet" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <a href="/data" class="mb-3 me-4">Back</a>
    <div class="d-flex flex-row align-items-center justify-content-center">
      <h1 class="mb-3 ms-4">Search Student Record</h1>
    </div>

    <!-- Branch Filter Dropdown -->
    <div class="container mt-3">
      <div class="d-flex justify-content-center">
        <input
          type="text"
          id="searchInput"
          class="form-control w-50"
          placeholder="Search for a record..."
        />
        <button class="btn btn-primary" type="button" id="searchButton">
          <i class="bi bi-search"></i>
        </button>
      </div>
    </div>

    <!-- Table Container -->
    <div class="table-container mt-4">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <tr>
            <th>Sl. No.</th>
            <th>First Name</th>
            <th>Second Name</th>
            <th>USN</th>
            <th>Branch</th>
            <th>Blood Group</th>
            <th>Father's Name</th>
            <th>Residential Address</th>
            <th>(Unformatted) Phone Number</th>
            <th>Phone Number</th>
            <th>Edit</th>
          </tr>
        </thead>
        <tbody id="dataTable">
          <% data.forEach(function(item) { %>
          <tr class="data-row" data-branch="<%= item.branch %>">
            <td><%= item.slNo %></td>
            <td><%= item.firstName %></td>
            <td><%= item.secondName %></td>
            <td><%= item.usn %></td>
            <td><%= item.branch %></td>
            <td><%= item.bloodGroup %></td>
            <td><%= item.fathersName %></td>
            <td><%= item.residentialAddress %></td>
            <td><%= item.unformattedPhoneNumber %></td>
            <td><%= item.phoneNumber %></td>
            <td>
              <button
                class="btn btn-danger btn-sm delete-btn"
                data-id="<%= item._id %>"
              >
                Delete
              </button>
              /
              <button
                class="btn btn-success btn-sm details-btn"
                onclick="window.location.href='/data/details/<%= item._id %>'"
              >
                Details
              </button> 
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    <script src="/js/search.js"></script>
  </body>
</html>
